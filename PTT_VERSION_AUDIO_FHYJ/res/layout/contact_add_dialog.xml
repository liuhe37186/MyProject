<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="230dip"
    android:layout_gravity="center"
    android:background="@drawable/background_sytle3"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/contact_user_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background__title_sytle"
                android:gravity="center"
                android:text="@string/add_contact"
                android:paddingLeft="15dip"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="7" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/name"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/contact_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:layout_weight="2"
                android:background="@drawable/bg_login_et"
                android:gravity="left|center_vertical"
                android:inputType="textPersonName"
                android:textColor="@color/text_color"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="7" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/number"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/contact_user_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:layout_weight="2"
                android:background="@drawable/bg_login_et"
                android:gravity="left|center_vertical"
                android:inputType="number"
                android:textColor="@color/text_color"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="#fe0000"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="#960807"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>