<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dip"
    android:background="@color/tab_wihte"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <ImageView android:id="@+id/item_transfer_imv"
        android:layout_height="60dip"
        android:layout_width="60dip"
        android:layout_marginLeft="10dip"
        />
    <TextView android:id="@+id/item_transfer_tv_content"
        android:layout_width="140dip"
        android:layout_height="55dip"
        android:textSize="14sp"
        android:layout_marginLeft="10dip"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="@string/nothing_write"
        />
    <LinearLayout 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        >
   
	    <TextView android:id="@+id/item_transfer_tv_person"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="12sp"
	        android:textColor="@color/black"
	        android:text="@string/send_to"
	        android:gravity="center"
	        />
	    <TextView android:id="@+id/item_transfer_tv_sent"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="12sp"
	        android:textColor="@color/black"
	        android:text="@string/status_title"
	        android:gravity="center"
	        />
	    <TextView android:id="@+id/item_transfer_tv_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="12sp"
	        android:textColor="@color/black"
	        android:text="2012-03-08 11:88"
	        android:gravity="center"
	        />
    </LinearLayout>
    

</LinearLayout>