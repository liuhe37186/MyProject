<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:background="@drawable/title_backupline"
    android:orientation="vertical" >
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_gravity="top"
        android:background="@color/whole_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="66dip"
            android:layout_height="36dip"
            android:layout_marginLeft="3dip"
            android:visibility="gone"  />
		<LinearLayout android:layout_width="wrap_content"
            android:layout_height="52dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/font_color4"
            android:id="@+id/btn_leftbtn"
            android:orientation="horizontal"
            >
            <TextView android:background="@drawable/map_back_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="5dip"
                android:layout_gravity="center_vertical"
                android:id="@+id/left_icon"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/t_leftbtn"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingRight="15dip"
                android:textColor="@color/font_color3"
                android:text="@string/advanced_option"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_weight="1.0"
            android:singleLine="true"
            android:gravity="center"
            android:text="@string/setting_voice_call"
            android:textColor="@color/font_color3"
            android:textSize="20.0dip" />

        <ImageButton
            android:id="@+id/set_button"
            android:layout_width="66dip"
            android:layout_height="36dip"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>